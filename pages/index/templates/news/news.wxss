.news-group {
  width: 100%;
  height: 200rpx;
  border-bottom: 2rpx solid #e4e4e4;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.news-group .info-group {
  /* float: left; */
  width: 470rpx;
  font-size: 32rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info-group .more-group {
  padding-right: 20rpx;
  display: flex;
  justify-content: space-between;
}

.news-group .thumnail-group {
  /* float: right; */
  width: 200rpx;
  height: 140rpx;
}

.thumnail {
  width: 100%;
  height: 100%;
}